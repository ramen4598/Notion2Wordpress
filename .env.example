# Notion2Wordpress - Example Environment Variables
# Copy to .env and fill in your values

# --- Notion ---
NOTION_API_TOKEN=secret_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
Notion_DATASOURCE_ID=00000000000000000000000000000000

# --- WordPress ---
# Verify SSL certificates for WordPress requests (set to false only in dev)
WP_VERIFY_SSL=true
# Production (HTTPS/TLS)
WP_API_URL=https://your-wordpress-site.com/wp-json
# Development/Self-hosted (HTTP allowed)
# WP_API_URL=http://localhost:8080/wp-json

WP_USERNAME=your-wordpress-username
WP_APP_PASSWORD=xxxx xxxx xxxx xxxx xxxx xxxx

# --- Telegram ---
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHAT_ID=@your_channel_or_chat_id

# --- Sync ---
SYNC_SCHEDULE=*/5 * * * *
NODE_ENV=production

# --- Database ---
DATABASE_PATH=./data/sync.db
LOG_LEVEL=info
# LOG_LEVEL=warn
# LOG_LEVEL=error

# --- Image Download ---
MAX_CONCURRENT_IMAGE_DOWNLOADS=3
IMAGE_DOWNLOAD_TIMEOUT_MS=30000

# --- Retry Configuration ---
MAX_RETRY_ATTEMPTS=3
RETRY_INITIAL_DELAY_MS=1000
